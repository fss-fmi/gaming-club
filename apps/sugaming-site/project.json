{
  "name": "sugaming-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sugaming-site",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/sugaming-site"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/sugaming-site"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "sugaming-site:build",
        "port": 4200,
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "sugaming-site:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "sugaming-site:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "sugaming-site:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/sugaming-site/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/sugaming-site/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": [
        "build"
      ],
      "options": {
        "engine": "docker",
        "metadata": {
          "images": [
            "sugaming-site",
            "ghcr.io/fss-fmi/sugaming-site"
          ],
          "load": true,
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-"
          ],
          "labels": [
            "org.opencontainers.image.source=https://github.com/fss-fmi/sugaming"
          ]
        }
      }
    }
  },
  "tags": []
}
